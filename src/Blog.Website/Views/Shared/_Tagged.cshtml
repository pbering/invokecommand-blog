@using Blog.Website.Data
@model Blog.Website.Models.PostModel
<span class="post-date">
    Posted @Model.Published.ToHumaneString(), tagged:
    @for (int i = 0; i < Model.Tags.Length; i++)
    {
        var tag = Model.Tags[i];
        @Html.ActionLink(tag, "Index", "Tag", new {name = tag.ToLowerInvariant() })@(i < Model.Tags.Length - 1 ? ", " : "")
    }
</span>